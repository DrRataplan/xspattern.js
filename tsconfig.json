{
	"compilerOptions": {
		"allowJs": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es2015"
		],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": [
			"jest"
		]
	},
	"include": [
		"src/**/*",
		"test/**/*",
		"lib/parser.js",
		"dist/xspattern.mjs"
	]
}
