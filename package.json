{
	"name": "xspattern",
	"version": "0.1.1",
	"description": "XML Schema pattern (regular expression) matcher",
	"author": "Stef Busking",
	"license": "MIT",
	"keywords": [
		"xml",
		"schema",
		"pattern",
		"xs:pattern"
	],
	"main": "dist/xspattern.js",
	"module": "dist/xspattern.mjs",
	"scripts": {
		"build:clean": "rimraf dist && rimraf lib && rimraf src/generated",
		"build:dirs": "mkdirp lib src/generated",
		"build:unicodedata": "node scripts/buildUnicodeDb.js",
		"build:parser": "pegjs -o src/generated/parser.js src/xspattern.pegjs",
		"build:bundle": "tsc -P tsconfig.build.json && rollup -c",
		"build": "npm-run-all build:clean build:dirs build:unicodedata build:parser build:bundle",
		"prepare": "npm run build",
		"test": "jest --coverage --verbose"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/bwrrp/xspattern.js"
	},
	"dependencies": {
		"whynot": "^3.0.2"
	},
	"devDependencies": {
		"@types/jest": "^24.0.18",
		"jest": "^24.9.0",
		"mkdirp": "^0.5.1",
		"npm-run-all": "^4.1.5",
		"pegjs": "^0.10.0",
		"prettier": "^1.18.2",
		"rimraf": "^3.0.0",
		"rollup": "^1.21.4",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-terser": "^5.1.2",
		"ts-jest": "^24.1.0",
		"ts-node": "^8.4.1",
		"typescript": "^3.6.3"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(\\.(tests))\\.(tsx?|jsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json",
			"jsx"
		],
		"collectCoverageFrom": [
			"src/**/*.ts"
		]
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	}
}
